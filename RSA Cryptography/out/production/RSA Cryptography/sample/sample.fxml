<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0"
            fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml/1" fx:id="borderPane" stylesheets="@style.css">
    <top>
        <Label text="RSA Cryptography Algorithm"/>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <children>
                <Button text="Instruction" fx:id="describe"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Random Prime Generator" fx:id="ran"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Big Multiplication" fx:id="big"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="String to ASCII code" fx:id="conversionInt"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="ASCII code to String" fx:id="conversionString"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Powmod Function" fx:id="powMod"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="InvertModulo Function" fx:id="invert"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Encryption" fx:id="encryption"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decryption" fx:id="decryption"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decipher Simple" fx:id="simple"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decipher Small Prime" fx:id="smallPrime"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decipher Small Difference" fx:id="smallDiff"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decipher Common Divisor" fx:id="commonDivisor"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
                <Button text="Decipher Hastad" fx:id="hastad"
                        style="-fx-font-size: 16;-fx-background-radius: 10;-fx-font-weight: bold" maxWidth="250"
                        mnemonicParsing="false"/>
            </children>
        </VBox>
    </center>
</BorderPane>