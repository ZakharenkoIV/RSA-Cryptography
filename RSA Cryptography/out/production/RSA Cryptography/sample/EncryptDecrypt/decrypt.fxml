<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.VBox?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.EncryptDecrypt.DecryptController"
            prefHeight="600.0" prefWidth="600.0">
    <content>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Enter the ciphertext" alignment="CENTER" style="-fx-font-weight: bold;-fx-font-size: 16px"/>
            <TextArea style="-fx-background-color: #333333;-fx-border-radius: 15;-fx-text-fill: white;-fx-border-width: inherit;-fx-border-color: black;-fx-font-size: 16px" fx:id="textarea" prefWidth="600" prefHeight="100"/>
            <Label text="Enter first value(p) of private key pair" alignment="CENTER" style="-fx-font-weight: bold;-fx-font-size: 16px"/>
            <TextArea style="-fx-background-color: #333333;-fx-border-radius: 15;-fx-text-fill: white;-fx-border-width: inherit;-fx-border-color: black;-fx-font-size: 16px" fx:id="p" prefWidth="600" prefHeight="50"/>
            <Label text="Enter second value(q) of private key pair" alignment="CENTER" style="-fx-font-weight: bold;-fx-font-size: 16px"/>
            <TextArea style="-fx-background-color: #333333;-fx-border-radius: 15;-fx-text-fill: white;-fx-border-width: inherit;-fx-border-color: black;-fx-font-size: 16px" fx:id="q" prefWidth="600" prefHeight="50"/>
            <Label text="Enter the public key exponent" alignment="CENTER" style="-fx-font-weight: bold;-fx-font-size: 16px"/>
            <TextArea style="-fx-background-color: #333333;-fx-border-radius: 15;-fx-text-fill: white;-fx-border-width: inherit;-fx-border-color: black;-fx-font-size: 16px" fx:id="exponent" prefWidth="600" prefHeight="50"/>
            <Button text="Process" fx:id="btn" style="-fx-border-radius: 10;-fx-font-size: 14;-fx-font-weight: bold"/>
            <Label text="Decrypted original message" alignment="CENTER" style="-fx-font-weight: bold;-fx-font-size: 16px"/>
            <TextArea fx:id="label" promptText="Original Message will appear here" style="-fx-border-radius: 15;-fx-border-color: black;-fx-font-size: 18" prefWidth="600" prefHeight="50" editable="false"/>
        </VBox>
    </content>
</DialogPane>
